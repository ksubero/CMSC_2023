    cout << "What score did your receive for the Chapter 2 Quiz? (Acceptable range: 0-100)" << endl;	
    cin >> chapterQuiz2;
    cout << "What score did your receive for the Programming Classwork1? (Acceptable range: 0-100)" << endl;	
    cin >> programmingClasswork1;
    cout << "What score did your receive for the Programming Classwork2? (Acceptable range: 0-100)" << endl;	
    cin >> programmingClasswork2;
    
    cout >> "userName" endl;
    cout >> "sumGrade" endl;
    cout >> "averageGrade" endl;
    

	int syllabusQuiz;
	int chapterQuiz1;
	int chapterQuiz2;
	int programmingClasswork1;
	int programmingClasswork2;
	double sumGrade = syllabusQuiz + chapterQuiz1 + chapterQuiz2 + programmingClasswork1 + programmingClasswork2;
	double averageGrade = sumGrade / 5;
	
	cout << "What is your first and last name? (separated by a space)" << endl;
	cin >> userName;
	cout << "What score did your receive for the Syllabus Quiz? (Acceptable range: 0-100)" << endl;	
    cin >> syllabusQuiz;
    cout << "What score did your receive for the Chapter 1 Quiz? (Acceptable range: 0-100)" << endl;	
